<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".Confirmation">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:src="@drawable/logo_title" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/upperrounded"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/inria_sans"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="for Donating"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/inria_sans"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/tickgif" />

        <TextView
            android:id="@+id/donationid"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="33dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/inria_sans"/>

        <TextView
            android:id="@+id/delivery"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/inria_sans"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/inria_sans"/>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btnblue"
            android:text="Go to Home"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />


    </LinearLayout>


    
</LinearLayout>