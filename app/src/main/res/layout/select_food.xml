<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".SelectFood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ds_backbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/backbtn"
            android:backgroundTint="@color/grey"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/upperrounded"
        android:backgroundTint="#E3C7C7"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inria_sans"
            android:text="Select Food Items"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inria_sans_light"
            android:text="Select the quantity of food items to be donated"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <TableLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TableRow>
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:src="@drawable/water" />

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:padding="15dp"
                    android:src="@drawable/biscuit" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inria_sans"
                    android:text="Water"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inria_sans"
                    android:text="Biscuits"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/btn_minus1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:fontFamily="@font/inria_sans_light"
                        android:textColor="@color/black"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="25dp" />

                    <ImageButton
                        android:id="@+id/btn_plus1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/plus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="10dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/btn_minus2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:fontFamily="@font/inria_sans_light"
                        android:textColor="@color/black"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="25dp" />

                    <ImageButton
                        android:id="@+id/btn_plus2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/plus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="10dp" />

                </LinearLayout>
            </TableRow>

            <TableRow android:layout_marginTop="25dp">
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:src="@drawable/juice"
                    android:padding="10dp"/>

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:padding="15dp"
                    android:src="@drawable/chips" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inria_sans"
                    android:text="Juice Box"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inria_sans"
                    android:text="Chips"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/btn_minus3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:fontFamily="@font/inria_sans_light"
                        android:textColor="@color/black"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="25dp" />

                    <ImageButton
                        android:id="@+id/btn_plus3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/plus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="10dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/btn_minus4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:fontFamily="@font/inria_sans_light"
                        android:textColor="@color/black"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="25dp" />

                    <ImageButton
                        android:id="@+id/btn_plus4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/plus"
                        android:scaleType="fitCenter"
                        android:background="@color/btngrey"
                        android:padding="10dp" />

                </LinearLayout>
            </TableRow>


        </TableLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/btnblue"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="20dp" />



    </LinearLayout>





</LinearLayout>